<link rel="stylesheet" href="{{ 'component-card-style-1.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'template-collection-style-1.css' | asset_url }}" media="print" onload="this.media='all'">


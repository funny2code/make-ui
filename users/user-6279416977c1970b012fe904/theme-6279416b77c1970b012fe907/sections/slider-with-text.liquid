{{ 'section-slider-with-text.css' | asset_url | stylesheet_tag }}

<div class="bc-slider-with-text">
  <div class="page-width">
    <div class="bc-slider-with-text__wrapper" {% if section.settings.bg_color != blank %}style="background: {{ section.settings.bg_color }};"{% endif %}>
      {%- if section.blocks.size > 0 -%}
        <slider-component class="bc-slider-with-text__slider-wrapper">
          <ul class="list-unstyled slider slider--desktop" role="list">
            {%- for block in section.blocks -%}
              {%- if block.settings.image != blank -%}
                <li class="slider__slide">
                  {% render 'resimg', image: block.settings.image %}
                </li>
              {%- else -%}
            	<li class="slider__slide">
                  <div class="media placeholder media-placeholder" style="padding-bottom:100%">
                    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
            	</li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
          <div class="slider-buttons slider-buttons-desktop slider-buttons--overlay no-js-hidden">
            <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">{% render 'icon-caret' %}</button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'accessibility.of' | t }}</span>
              <span class="slider-counter--total">{{ section.blocks.size }}</span>
            </div>
            <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">{% render 'icon-caret' %}</button>
          </div>
        </slider-component>
      {%- endif -%}
      <div class="bc-slider-with-text__text-wrapper" {% if section.settings.color != blank %}style="color: {{ section.settings.color }};"{% endif %}>
        <div class="bc-slider-with-text__text-content">
          {%- if section.settings.heading != blank -%}
          <h2 class="bc-slider-with-text__text-heading">
            {{ section.settings.heading }}
          </h2>
          {%- endif -%}
          <div class="bc-flex">
            <div class="right">
              {%- for i in (1..3) -%}
                {%- liquid
                  assign labelHandle = 't_l_' | append: i 
                  assign label = section.settings[labelHandle] -%}
              	{%- if label != blank -%}
                  <span class="bc-slider-with-text__text-label">
                  {{ label }}
                  </span>
              	{%- endif -%}
              {%- endfor -%}
            </div>
            <div style="text-align:left;">
              {%- for i in (1..3) -%}
                {%- liquid
                  assign valueHandle = 't_' | append: i 
                  assign value = section.settings[valueHandle] -%}
              	{%- if value != blank -%}
                  <span class="bc-slider-with-text__text-value">
                  {{ value }}
                  </span>
              	{%- endif -%}
              {%- endfor -%}
            </div>
          </div>
          {%- if section.settings.title != blank -%}
          <h3 class="bc-slider-with-text__text-title">
            {{ section.settings.title }}
          </h3>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
          <div class="bc-slider-with-text__text-text">
            {{ section.settings.text }}
          </div>
          {%- endif -%}
        </div>
      </div>
      {%- if section.settings.icon != blank -%}
      <img src="{{ section.settings.icon | img_url: '254x' }}" 
           loading="lazy" 
           width="{{ section.settings.icon.width }}"
           height="{{ section.settings.icon.height }}" 
           class="bc-slider-with-text__icon"/>
      {%- endif -%}
    </div>
  </div>
</div>








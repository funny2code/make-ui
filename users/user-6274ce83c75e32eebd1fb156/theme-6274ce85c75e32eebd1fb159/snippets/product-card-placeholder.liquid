{% comment %}
    Renders a product card placeholder

    Usage:
    {% render 'product-card-placeholder' %}
{% endcomment %}

<div class="card-wrapper">
  <a class="full-width-link"><span class="visually-hidden">{{ 'onboarding.product_title' | t }}</span></a>
  <div class="media media--transparent media--adapt media--hover-effect py-bg-c-light" style="padding-bottom: 66.7027027027027%;"> 
  {% assign n_index = index | modulo:6 | plus: 1 %}             
  {{ 'product-' | append: n_index  | placeholder_svg_tag: 'placeholder-svg' }}             
   </div>
  <div class="card-information">
    <h5 class="card-information__text h5 center">{{ 'onboarding.product_title' | t }}</h5>
    <div class="card-information__wrapper">
      <span class="visually-hidden">{{ 'accessibility.vendor' | t }}</span>
      <div class="caption-with-letter-spacing light">{{ 'products.product.vendor' | t }}</div>
      {% render 'price' %}
    </div>
  </div>
</div>

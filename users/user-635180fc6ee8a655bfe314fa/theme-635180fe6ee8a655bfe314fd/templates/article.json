{
  "sections": {
    "main": {
      "type": "article",
      "blocks": {
        "featured_image": {
          "type": "featured_image",
          "settings": {
            "image_display": "cover",
            "image_width": "full",
            "image_height": "default",
            "img_border_radius": 5
          }
        },
        "title": {
          "type": "title",
          "settings": {
            "title_font_size": 32,
            "title_align": "left",
            "blog_show_date": true,
            "date_font_size": 14,
            "date_align": "left",
            "blog_show_author": true,
            "author_font_size": 17,
            "author_align": "left"
          }
        },
        "content": {
          "type": "content",
          "settings": {
            "content_font_size": 16,
            "content_align": "left"
          }
        }
      },
      "block_order": [
        "featured_image",
        "title",
        "content"
      ],
      "settings": {
        "layout": "horizontal",
        "page_width": "width-s",
        "py_section_bg_color": "bg-c-dark",
        "page_y_pd": "pd-y-xl"
      }
    }
  },
  "order": [
    "main"
  ]

<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}</noscript>

<div class="rich-text py-{{section.settings.bgc}} py-{{section.settings.br}} py-{{section.settings.sxmg}} py-{{section.settings.symg}}">
  <div class="page-width page-{{section.settings.pw}} py-{{section.settings.pxpd}} py-{{section.settings.pypd}}">
    <div class="rich-text__blocks">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="h2 py-{{block.settings.tc}} py-{{block.settings.fs}}">{{ block.settings.heading }}</h2>
          {%- when 'text' -%}
            <div class="rich-text__text rte py-{{block.settings.tc}} py-{{block.settings.fs}}">{{ block.settings.text }}</div>
          {%- when 'button' -%}
            <a {% if block.settings.button_link == blank %}aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button">
              {{ block.settings.button_label }}
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>


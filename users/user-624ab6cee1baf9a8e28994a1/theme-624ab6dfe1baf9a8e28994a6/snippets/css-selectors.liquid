{%- liquid
    assign body_font_bold = settings.body_font | font_modify: 'weight', 'bold'
    assign body_font_italic = settings.body_font | font_modify: 'style', 'italic'
    assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
-%}
{%- style -%}

    {%- if settings.body_font_custom != blank -%}
        {{ settings.body_font_custom }}
    {%- endif -%}
    {%- if settings.heading_font_custom != blank -%}
        {{ settings.heading_font_custom }}
    {%- endif -%}
    {%- if settings.title_font_custom != blank -%}
        {{ settings.title_font_custom }}
    {%- endif -%}
    {%- if settings.sub_title_font_custom != blank -%}
        {{ settings.sub_title_font_custom }}
    {%- endif -%}
    {%- if settings.button_font_custom != blank -%}
        {{ settings.button_font_custom }}
    {%- endif -%}
    {%- if settings.nav_font_custom != blank -%}
        {{ settings.nav_font_custom }}
    {%- endif -%}
    {%- if settings.field_font_custom != blank -%}
        {{ settings.field_font_custom }}
    {%- endif -%}

    {{ settings.body_font | font_face: font_display: 'swap' }}
    {{ body_font_bold | font_face: font_display: 'swap' }}
    {{ body_font_italic | font_face: font_display: 'swap' }}
    {{ body_font_bold_italic | font_face: font_display: 'swap' }}
    {{ settings.heading_font | font_face: font_display: 'swap' }}
    {{ settings.title_font | font_face: font_display: 'swap' }}
    {{ settings.sub_title_font | font_face: font_display: 'swap' }}
    {{ settings.nav_font | font_face: font_display: 'swap' }}
    {{ settings.button_font | font_face: font_display: 'swap' }}
    {{ settings.field_font | font_face: font_display: 'swap' }}


        {%- if settings.title_font_size != blank -%}--font-title-size: {{ settings.title_font_size }};{%- endif -%}
        {%- if settings.title_font_line != blank -%}--font-title-line: {{ settings.title_font_line }};{%- endif -%}
        {%- if settings.title_font_spacing != blank -%}--font-title-spacing: {{ settings.title_font_spacing }};{%- endif -%}
        --font-title-transform: {{ settings.title_font_transform }};

        --font-sub-title-family: {%- if settings.sub_title_font_custom != blank -%}'sub-title-font'{%- else -%}{{ settings.sub_title_font.family }}, {{ settings.sub_title_font.fallback_families }}{%- endif -%};

        --font-nav-weight: {{ settings.nav_font.weight }};
        {%- if settings.nav_font_size != blank -%}--font-nav-size: {{ settings.nav_font_size }};{%- endif -%}
        {%- if settings.nav_font_line != blank -%}--font-nav-line: {{ settings.nav_font_line }};{%- endif -%}
        {%- if settings.nav_font_spacing != blank -%}--font-nav-spacing: {{ settings.nav_font_spacing }};{%- endif -%}

        --font-button-style: {{ settings.button_font.style }};
        --font-button-weight: {{ settings.button_font.weight }};
        {%- if settings.button_font_size != blank -%}--font-button-size: {{ settings.button_font_size }};{%- endif -%}
        {%- if settings.button_font_line != blank -%}--font-button-line: {{ settings.button_font_line }};{%- endif -%}
        {%- if settings.button_font_spacing != blank -%}--font-button-spacing: {{ settings.button_font_spacing }};{%- endif -%}
        --font-button-transform: {{ settings.nav_font_transform }};

        --font-field-family: {%- if settings.field_font_custom != blank -%}'field-font'{%- else -%}{{ settings.field_font.family }}, {{ settings.field_font.fallback_families }}{%- endif -%};
        --font-field-style: {{ settings.field_font.style }};

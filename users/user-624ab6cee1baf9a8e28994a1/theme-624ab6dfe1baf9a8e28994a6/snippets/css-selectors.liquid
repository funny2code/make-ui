        {%- if settings.body_font_custom != blank -%}
        --font-body-family: 'body-font'
        --font-body-style: normal;
        --font-body-weight: 400;
        {%- else -%}
        --font-body-family: {{ settings.body_font.family }}, {{ settings.body_font.fallback_families }};
        --font-body-style: {{ settings.body_font.style }};
        --font-body-weight: {{ settings.body_font.weight }};
        {%- endif -%}
        {%- if settings.body_font_size != blank -%}--font-body-size: {{ settings.body_font_size }};{%- endif -%}
        {%- if settings.body_font_line != blank -%}--font-body-line: {{ settings.body_font_line }};{%- endif -%}
        {%- if settings.body_font_spacing != blank -%}--font-body-spacing: {{ settings.body_font_spacing }};{%- endif -%}

        --font-heading-family: {%- if settings.heading_font_custom != blank -%}'heading-font'{%- else -%}{{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }}{%- endif -%};
        --font-heading-style: {{ settings.heading_font.style }};
        --font-heading-weight: {{ settings.heading_font.weight }};
        {%- if settings.heading_font_size != blank -%}--font-heading-size: {{ settings.heading_font_size }};{%- endif -%}
        {%- if settings.heading_font_line != blank -%}--font-heading-line: {{ settings.heading_font_line }};{%- endif -%}
        {%- if settings.heading_font_spacing != blank -%}--font-heading-spacing: {{ settings.heading_font_spacing }};{%- endif -%}
        --font-heading-transform: {{ settings.heading_font_transform }};

        --font-title-family: {%- if settings.title_font_custom != blank -%}'title-font'{%- else -%}{{ settings.title_font.family }}, {{ settings.title_font.fallback_families }}{%- endif -%};

<link rel="stylesheet" href="/assets/component-cart-notification-style-3.css" media="print" onload="this.media='all'">
<style>
  {{#if sectionSettings.button_radius }}
  .bc-cart__buttons-wrapper .button{
    border-radius: {{sectionSettings.button_radius}}px;  
  }
  {{/if}}
  {{#if sectionSettings.item_bg }}
  .bc-cart__item{
    padding:10px;
    background-color:{{sectionSettings.item_bg}};
    {{#if sectionSettings.item_radius }}
    border-radius: {{sectionSettings.item_radius}}px; 
    {{/if}}
  }
  {{/if}} 
  {{#if sectionSettings.item_radius }}
  .bc-cart__item .bc-cart__image-wrapper img{
    border-radius: {{sectionSettings.item_radius}}px;
  } 
  {{/if}}
  {{#if sectionSettings.enable_dynamic_pay }}
  #loopcheckoutdynamic{
    margin-top: 15px;
    background: #5b32f6;
  }
  #loopcheckoutdynamic:hover{
    box-shadow: 0 0 10px black;
  }
  #loopcheckoutdynamic img{
    width: 74px;
  }
  {{/if}}
</style>


<div class="py__settings-item">
    <div class="py__settings-item-header">
        <label><%= data.label %></label>
        <% if(data.info){ %>
            <div class="py__tooltip">
                <%- include('../icons', {type: 'info'}) %>
                <p class="py__tooltiptext">
                    <%= data.info %>
                </p>
            </div>
        <% } %>
    </div>
    <div class="py__comp-select">
        <select name="<%= data.id %>" type="select">
            <% data.options.forEach(option => { %>
                <option value="<%= option.value %>" <% if(data.default === option.value){ %>selected<% } %>><%= option.label %></option>
            <% }) %>
        </select>
    </div>
</div>
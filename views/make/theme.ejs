<div class="py__theme">
    <div class="py__theme-image_wrapper">
        <img src="/screens/screen-<%=id%>.png">
        <div class="py__theme-image_mobile-wrapper">
            <img src="/screens/m-screen-<%=id%>.png">
        </div>
    </div>
    <div class="py__theme-info">
        <% if(settings?.theme_name){ %>
            <h3 class="py__theme-title"><%= settings?.theme_name %></h3>
        <% } %>
        <div class="py__theme-details">
            <% if(user){ %>
                <% if(user.isAdmin){ %>
                    <a href="/themes/<%=id%>?page=index" class="py__button py__button-blue">
                        Customize theme
                    </a>
                <% } %>
                <a href="/add/<%=user._id%>/<%=id%>" class="py__button py__button-blue py__button-add-theme">
                    Add this theme
                </a>
            <% } else { %>
                <button type="button" data-href="/remix/<%=id%>?page=index" class="py__button py__button-blue py__button-pick">
                    Pick Theme
                </button>
            <% } %>
        </div>
    </div>
</div>
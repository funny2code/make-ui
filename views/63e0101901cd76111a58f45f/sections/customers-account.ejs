<link rel="stylesheet" href="/<%=srcId%>section-main-page.css" >
<link rel="stylesheet" href="/<%=srcId%>component-rte.css" >

<style>  
  .page-container{
    background-color:<%=section.settings.page_bg_color%>;
    padding:5px;
    text-align:<%=section.settings.page_align%>;
  }
  .page-container .customer *:not(.logout-link):not(.cu_address){
    color:<%=section.settings.page_color%>;
  }  
  @media(max-width:799px){
    .page-container .customer table.order-history{
      background-color:<%=section.settings.table_body_color_br%>;
      border-collapse: collapse;
    }
    .page-container .customer table.order-history thead{
      display:none;
    }
    .page-container .customer table.order-history tbody{    
      display: flex;
      flex-wrap:wrap;
      column-gap:2%;
    }
    .page-container .customer table.order-history tr{
      display:block;
      width:49%;
      background-color:<%=section.settings.card_bg_color%>;
      border-radius:<%=section.settings.card_border_radius%>px;
      padding: 2rem;
      text-align:left;
      margin-bottom:2%;
    }
    .page-container .customer table.order-history td{
      padding:1rem 0;
    }
    .page-container .customer table.order-history th,
    .page-container .customer table.order-history td,
    .page-container .customer table.order-history td *{
      display: block;
      color:<%=section.settings.card_color%>;
      font-size:14px;
    }
    .page-container .customer table.order-history td.columnorder a{
      font-size:18px;
    }
    .page-container .customer table.order-history td.columnpayment{
      display:inline-block;
      margin: 10px 1%;    
      text-align: center;
      color:<%=section.settings.card_pay_color%>;
      background-color:<%=section.settings.card_pay_bg_color%>;
      border-radius:<%=section.settings.card_pay_border_radius%>px;
      padding:3px 15px;
      text-transform: uppercase;
      margin-left:0px;
    }
    .page-container .customer table.order-history td.columnfulfillment{
      display:inline-block;
      margin: 10px 1%;      
      text-align: center;
      color:<%=section.settings.card_ful_color%>;
      background-color:<%=section.settings.card_ful_bg_color%>;
      border-radius:<%=section.settings.card_pay_border_radius%>px;
      padding:3px 15px;
      text-transform: uppercase;
    }
    .page-container .customer table.order-history td.columntotal:before{
      content:'TOTAL';
      display:block;
      padding-bottom:10px;
      margin-top:15px;
    }
  }
  @media(max-width:749px){
    .page-container .customer table.order-history tr{      
      width:90%;      
      margin-left:5%;
    }
  }
  @media(min-width:800px){
    .page-container.order-history-cards .customer table.order-history{
      background-color:<%=section.settings.table_body_color_br%>;
      border-collapse: collapse;
    }
    .page-container.order-history-cards .customer table.order-history thead{
      display:none;
    }
    .page-container.order-history-cards .customer table.order-history tbody{    
      display: flex;
      flex-wrap:wrap;
      column-gap:2%;
    }
    .page-container.order-history-cards .customer table.order-history tr{
      display:block;
      width:32%;
      background-color:<%=section.settings.card_bg_color%>;
      border-radius:<%=section.settings.card_border_radius%>px;
      padding: 2rem;
      text-align:left;
      margin-bottom:2%;
    }
    .page-container.order-history-cards .customer table.order-history td{
      padding:1rem 0;
    }
    .page-container.order-history-cards .customer table.order-history th,
    .page-container.order-history-cards .customer table.order-history td,
    .page-container.order-history-cards .customer table.order-history td *{
      display: block;
      color:<%=section.settings.card_color%>;
      font-size:14px;
    }
    .page-container.order-history-cards .customer table.order-history td.columnorder a{
      font-size:18px;
    }
    .page-container.order-history-cards .customer table.order-history td.columnpayment{
      display:inline-block;
      margin: 10px 1%;      
      text-align: center;
      color:<%=section.settings.card_pay_color%>;
      background-color:<%=section.settings.card_pay_bg_color%>;
      border-radius:<%=section.settings.card_pay_border_radius%>px;
      padding:3px 15px;
      text-transform: uppercase;
    }
    .page-container.order-history-cards .customer table.order-history td.columnfulfillment{
      display:inline-block;
      margin: 10px 1%;      
      text-align: center;
      color:<%=section.settings.card_ful_color%>;
      background-color:<%=section.settings.card_ful_bg_color%>;
      border-radius:<%=section.settings.card_pay_border_radius%>px;
      padding:3px 15px;
      text-transform: uppercase;
    }
    .page-container.order-history-cards .customer table.order-history td.columntotal:before{
      content:'TOTAL';
      display:block;
      padding-bottom:10px;
    }
  }
  @media(min-width:800px){
    .page-container.order-history-table .customer table.order-history{
      background-color:<%=section.settings.table_body_color_br%>;
      border-collapse: separate;      
    }
    .page-container.order-history-table .customer table.order-history thead{
      background-color:<%=section.settings.table_header_bg_color%>;     
    }
    .page-container.order-history-table .customer table.order-history tbody{
      background-color:<%=section.settings.table_body_bg_color%>;      
    }    
    .page-container.order-history-table .customer table.order-history td,
    .page-container.order-history-table .customer table.order-history td *{
      padding: 0.8rem 2rem;
      text-align:<%=section.settings.page_align%>;
      color:<%=section.settings.table_header_color%>;
    }
    .page-container.order-history-table .customer table.order-history th{
      padding: 0.8rem 2rem;
      text-align:<%=section.settings.page_align%>;
      color:<%=section.settings.table_header_color%>;
    }
    
  }
  
</style>
<div class="page-container order-history-<%=section.settings.order_history_desktop%>">
  
<div class="customer account">
  <div class="title">
    <h1><%=customert.account.title%></h1>
    <a class="logout-link button py-c-<%=section.settings.page_color_btn%> py-hv-c-<%=section.settings.page_color_btn_hover%> py-bg-c-<%=section.settings.page_bg_color_btn%> py-hv-bg-c-<%=section.settings.page_bg_color_btn_hover%> py-btn-<%=section.settings.btn_size%>" href="<%= routes.account_logout_url %>">
      <%=customert.log_out%>
    </a>
  </div>

  <div >
    <div class="order-info-content py-pd-y-xl">
      <h2><%=customert.orders.title%></h2>

      <%# paginate customert.orders by 20){ %>
        <% if(customer?.orders?.length > 0){ %>
          <table role="table" class="order-history">
            <caption class="visually-hidden"><%=customert.orders.title%></caption>
            <thead role="rowgroup">
              <tr role="row">
                <th id="ColumnOrder" scope="col" role="columnheader"><%=customert.orders.order_number%></th>
                <th id="ColumnDate" scope="col" role="columnheader"><%=customert.orders.date%></th>
                <th id="ColumnPayment" scope="col" role="columnheader"><%=customert.orders.payment_status%></th>
                <th id="ColumnFulfillment" scope="col" role="columnheader"><%=customert.orders.fulfillment_status%></th>
                <th id="ColumnTotal" scope="col" role="columnheader"><%=customert.orders.total%></th>
              </tr>
            </thead>
            <tbody role="rowgroup">
              <% customer?.orders?.forEach((order,index)=>{ %>
                <tr role="row">
                  <td
                    class="columnorder"
                    id="RowOrder"
                    role="cell"
                    headers="ColumnOrder"
                    data-label="<%=customert.orders.order_number%>"
                  >
                    <a href="<%= order.customer_url %>" aria-label="<%=customert.orders.order_number_link %>">
                      <%= order.name %>
                    </a>
                  </td>
                  <td class="columndate" headers="RowOrder ColumnDate" role="cell" data-label="<%=customert.orders.date%>">
                    <%= new Date(order.created_at).getFullYear() %>
                  </td>
                  <td class="columnpayment" headers="RowOrder ColumnPayment" role="cell" data-label="<%=customert.orders.payment_status%>">
                    <%= order.financial_status_label %>
                  </td>
                  <td class="columnfulfillment" headers="RowOrder ColumnFulfillment" role="cell" data-label="<%=customert.orders.fulfillment_status%>">
                    <%= order.fulfillment_status_label %>
                  </td>
                  <td class="columntotal" headers="RowOrder ColumnTotal" role="cell" data-label="<%=customert.orders.total%>">
                    <%= order.total_price_with_currency %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p><%=customert.orders.none%></p>      
        <% } %>

        <% if(paginate?.pages > 1){ %>
          <% if(paginate?.parts?.length > 0){ %>
              <nav class="pagination" role="navigation" aria-label="<%=general.pagination.label%>">
                <ul role="list">
                <% if(paginate?.previous){ %>
                  <li>
                    <a href="<%= paginate?.previous.url %>" aria-label="<%=general.pagination.previous%>">
                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                      </svg>
                    </a>
                  </li>
                <% } %>

                <% paginate?.parts?.forEach((part,index)=>{ %>
                  <li>
                    <% if(part.is_link){ %>
                      <a href="<%= part.url %>" aria-label="<%=general.pagination.page %>"><%= part.title %></a>
                    <% } else { %>
                      <% if(part.title === paginate?.current_page){ %>
                        <span aria-current="page" aria-label="<%=general.pagination.page %>"><%= part.title %></span>
                      <% } else { %>
                        <span><%= part.title %></span>
                      <% } %>
                    <% } %>
                  </li>
                <% }) %>

                <% if(paginate?.next){ %>
                  <li>
                    <a href="<%= paginate?.next.url %>" aria-label="<%=general.pagination.next%>" >
                      <svg aria-hidden="true" focusable="false" viewBox="0 0 10 6">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
                      </svg>
                    </a>
                  </li>
                <% } %>
                </ul>
              </nav>
          <% } %>
        <% } %>
      <%# endpaginate){ %>
    </div>

    <div class="account-details-content">
      <h2><%=customert.account.details%></h2>

      <%# customert.default_address | format_address %>

      <a class="cu_address button py-c-<%=section.settings.page_color_btn%> py-hv-c-<%=section.settings.page_color_btn_hover%> py-bg-c-<%=section.settings.page_bg_color_btn%> py-hv-bg-c-<%=section.settings.page_bg_color_btn_hover%> py-btn-<%=section.settings.btn_size%>" href="<%= routes.account_addresses_url %>">
        <%=customert.account.view_addresses%> (<%= customert.addresses_count %>)
      </a>
    </div>

  </div>
</div>
</div>
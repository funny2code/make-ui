<%=component-collection-hero.css' <%=srcId%> | stylesheet_tag %>
<style>
  
  .bc-password-form .field__input{
    background-color:<%=section.settings.input_bg_color%> !important;
    color:<%=section.settings.input_color%> !important;
  }
  
  .bc-password-form input[type='password']::-webkit-input-placeholder { /* Edge */
    color:<%=section.settings.input_color%>;
    opacity:.6;
  }

  .bc-password-form input[type='password']:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color:<%=section.settings.input_color%>;
    opacity:.6;
  } 

  .bc-password-form input[type='password']::placeholder {
    color:<%=section.settings.input_color%>;
    opacity:.6;
  }
  .bc-password-form .bc-submit {
    background-color: <%=section.settings.btn_bg_color%>;
    color:<%=section.settings.btn_color%>;
  }
</style>
<collection-password class="collection-hero collection-hero-password<% if(section.settings.show_collection_image && collection.image || section.settings.show_collection_image && section.settings.image){ %> collection-hero--with-image<% } %>">
  <div class="collection-hero__inner collection-hero__inner-<%= section.id %> page-width pw-banner" <% if(section.settings.banner_link){ %> style="cursor: pointer;" aria-href=" <%= section.settings.banner_link %>" <% } %>>
    <%- include('../snippets/style', sufix: '.collection-hero__inner', id: section.id, style: section.settings){ %>
    <div class="collection-hero__text-wrapper">

      <% if(section.settings.countdown){ %>
        <%- include('../snippets/component-countdown', countdown: section.settings.countdown){ %>
      <% } %>

      <% if(section.settings.show_collection_title){ %>
      <h1 class="collection-hero__title">
        <span class="visually-hidden"><%=sectionst.collection_template.title%>: </span>
        <%=- collection.title -%>
      </h1>
      <% } %>

      <% if(section.settings.password){ %>
      <form action="/password" method="GET" data-id="<%= section.settings.password | md5 %>" class="bc-password-form">
        <div class="bc-password-wrapper">
            <input type="password" name="password" id="coll-password-field" class="field__input" placeholder="Password" required/>
            <% if(section.settings.error){ %>
                <span class="bc-error-message bc-hide" data-type="error"><%= section.settings.error %></span>
            <% } %>
        </div>
        <% if(section.settings.btn){ %>
        <div class="bc-button-wrapper">
            <button type="submit" name="submit" class="button bc-submit"><%= section.settings.btn %></button>
        </div>
        <% } %>
      </form>
      <% } %>

      <% if(section.settings.show_collection_description){ %>
        <div class="collection-hero__description rte"><%= collection.description %></div>
      <% } %>
      <% if(section.settings.btn_link){ %>
        <div class="banner__buttons">
          <a id="bunner__button-button" href="<%=section.settings.btn_link%>" class="button button--primary"><%=section.settings.btn_label%></a>
        <style type="text/css">
          #bunner__button-button {
            font-size: 2rem;color: #ffffff;font-weight: 300;border-color: #000000;box-shadow: 0 0 0 0.1rem #000000;border-width: 1px;background-color: #000000;width: 200px;}</style>
          </div>
      <% } %>
    </div>

    <% if(section.settings.show_collection_image && collection.image || section.settings.show_collection_image && section.settings.image){ %>
      <div class="collection-hero__image-container media <% if(section.settings.m_image){ %>small-hide<% } %>">
        <% if(section.settings.image && collection.image === blank){ %>
          <img srcset="<% if(section.settings.image.width >= 750){ %><%= section.settings.image | img_url: '750x' %> 750w,<% } %>
            <% if(section.settings.image.width >= 1100){ %><%= section.settings.image | img_url: '1100x' %> 1100w,<% } %>
            <% if(section.settings.image.width >= 1500){ %><%= section.settings.image | img_url: '1500x' %> 1500w,<% } %>
            <% if(section.settings.image.width >= 1780){ %><%= section.settings.image | img_url: '1780x' %> 1780w,<% } %>
            <% if(section.settings.image.width >= 2000){ %><%= section.settings.image | img_url: '2000x' %> 2000w<% } %>
            <% if(section.settings.image.width >= 2800){ %><%= section.settings.image | img_url: '2800x' %> 2800w,<% } %>"
            sizes="100vw"
            src="<%= section.settings.image | img_url: '750x' %>"
            alt="<%= collection.title %>"
            
            width="<%= section.settings.image.width %>"
            height="<%= section.settings.image.height %>"
          >
        <% } %>
        <% if(collection.image){ %>
          <img srcset="<% if(collection.image.width >= 165){ %><%= collection.image | img_url: '165x' %> 165w,<% } %>
            <% if(collection.image.width >= 360){ %><%= collection.image | img_url: '360x' %> 360w,<% } %>
            <% if(collection.image.width >= 535){ %><%= collection.image | img_url: '535x' %> 535w,<% } %>
            <% if(collection.image.width >= 720){ %><%= collection.image | img_url: '720x' %> 720w,<% } %>
            <% if(collection.image.width >= 940){ %><%= collection.image | img_url: '940x' %> 940w,<% } %>
            <% if(collection.image.width >= 1070){ %><%= collection.image | img_url: '1070x' %> 1070w<% } %>"
            src="<%= collection.image | img_url: '533x' %>"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)"
            alt="<%= collection.title %>"
            
            width="<%= collection.image.width %>"
            height="<%= collection.image.height %>"
          >
        <% } %>
      </div>
    <% } %>
    <% if(section.settings.show_collection_image && collection.image || section.settings.show_collection_image && section.settings.m_image){ %>
      <div class="collection-hero__image-container media large-up-hide medium-hide">
        <% if(section.settings.m_image && collection.image === blank){ %>
          <img srcset="<% if(section.settings.m_image.width >= 750){ %><%= section.settings.m_image | img_url: '750x' %> 750w,<% } %>
            <% if(section.settings.m_image.width >= 1100){ %><%= section.settings.m_image | img_url: '1100x' %> 1100w,<% } %>
            <% if(section.settings.m_image.width >= 1500){ %><%= section.settings.m_image | img_url: '1500x' %> 1500w,<% } %>
            <% if(section.settings.m_image.width >= 1780){ %><%= section.settings.m_image | img_url: '1780x' %> 1780w,<% } %>
            <% if(section.settings.m_image.width >= 2000){ %><%= section.settings.m_image | img_url: '2000x' %> 2000w<% } %>
            <% if(section.settings.m_image.width >= 2800){ %><%= section.settings.m_image | img_url: '2800x' %> 2800w,<% } %>"
            sizes="100vw"
            src="<%= section.settings.m_image | img_url: '750x' %>"
            alt="<%= collection.title %>"
            
            width="<%= section.settings.m_image.width %>"
            height="<%= section.settings.m_image.height %>"
          >
        <% } %>
        <% if(collection.image){ %>
          <img srcset="<% if(collection.image.width >= 165){ %><%= collection.image | img_url: '165x' %> 165w,<% } %>
            <% if(collection.image.width >= 360){ %><%= collection.image | img_url: '360x' %> 360w,<% } %>
            <% if(collection.image.width >= 535){ %><%= collection.image | img_url: '535x' %> 535w,<% } %>
            <% if(collection.image.width >= 720){ %><%= collection.image | img_url: '720x' %> 720w,<% } %>
            <% if(collection.image.width >= 940){ %><%= collection.image | img_url: '940x' %> 940w,<% } %>
            <% if(collection.image.width >= 1070){ %><%= collection.image | img_url: '1070x' %> 1070w<% } %>"
            src="<%= collection.image | img_url: '533x' %>"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc(50vw - 130px), calc(50vw - 55px)"
            alt="<%= collection.title %>"
            
            width="<%= collection.image.width %>"
            height="<%= collection.image.height %>"
          >
        <% } %>
      </div>
    <% } %>
  </div>
</collection-password>

<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/crypto-js.min.js" defer="defer"></script>
<script src="<%=collection-password.js' <%=srcId%> %>" defer="defer"></script>
<script>
  if(document.getElementsByClassName('pw-banner').length>0){
    var HSL = document.getElementsByClassName("pw-banner");
    var i;

    for (i = 0; i < HSL.length; i++) {
      if(HSL[i].getAttribute('aria-href')!=null)
      HSL[i].addEventListener("click", function() {
        window.location.href = this.getAttribute('aria-href');
      });
    }
  }
</script>
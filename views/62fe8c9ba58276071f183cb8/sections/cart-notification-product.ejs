<% if(cart !== empty){ %>
  <% for item in cart.items){ %>
    <div id="cart-notification-product-<%= item.id %>">
      <% if(item.image){ %>
        <img class="cart-notification-product__image"
          src="<%= item.image | img_url: '140x' %>"
          alt="<%= item.image.alt %>"
          width="70"
          height="<%= 70 / item.image.aspect_ratio Math.ceil() %>"
          loading="lazy"
        >
      <% } %>
      <div class="cart-notification-product__info">
        <h3 class="cart-notification-product__name h4"><%= item.product.title %></h3>
        <% if(!item.product.has_only_default_variant){ %>
          <dl>
            <% for option in item.options_with_values){ %>
              <div class="cart-notification-product__option h4">
                <dt><%= option.name %>: </dt>
                <dd><%= option.value %></dd>
              </div>
            <% }) %>
          </dl>
        <% } %>
      </div>
    </div>
  <% }) %>
<% } %>

<%=component-image-with-text.css' <%=srcId%> | stylesheet_tag %>
<style>
.image-with-text-<%=section.id%> .image-with-text__grid{
    background:<%=section.settings.py_section_bg_color%>
}
<% if(section.settings.image){ %>
.image-with-text-<%=section.id%> .image-with-text__media{
    <% if(section.settings.section_height === 'auto'){ %> 
    padding-bottom: <%= 1 / section.settings.image.aspect_ratio * 100 %>%;
    <% } else { %>
    padding-bottom: <%=section.settings.section_height%>
    <% } %>
}
@meida(max-width:749px){
   .image-with-text-<%=section.id%> .image-with-text__media{
        <% if(section.settings.section_height_m === 'auto'){ %> 
        padding-bottom: <%= 1 / section.settings.image.aspect_ratio * 100 %>%;
        <% } else { %>
        padding-bottom: <%=section.settings.section_height_m%>
        <% } %>
    } 
}
<% } %>
</style>
<div class="image-with-text image-with-text-<%=section.id%> bc-<%=settings.section_style%>-bt">
  <div class="<% if(section.settings.full_width){ %>image-with-text--full-width<% } else { %>page-width<% } %> page-width-<%=settings.section_style%>">
    <div class="image-with-text__grid img_style-<%=section.settings.img_style%>  <% if(section.settings.layout === 'text_first'){ %> image-with-text__grid--reverse<% } %> grid grid--gapless grid--1-col grid--2-col-tablet">
      <div class="grid__item img-wrap">
        <div class="image-with-text__media <% if(section.settings.image){ %>media<% } else { %>image-with-text__media--placeholder placeholder<% } %>">
          <% if(section.settings.image){ %>
            <img srcset="<% if(section.settings.image.width >= 165){ %><%= section.settings.image | img_url: '165x' %> 165w,<% } %>
              <% if(section.settings.image.width >= 360){ %><%= section.settings.image | img_url: '360x' %> 360w,<% } %>
              <% if(section.settings.image.width >= 535){ %><%= section.settings.image | img_url: '535x' %> 535w,<% } %>
              <% if(section.settings.image.width >= 720){ %><%= section.settings.image | img_url: '720x' %> 720w,<% } %>
              <% if(section.settings.image.width >= 940){ %><%= section.settings.image | img_url: '940x' %> 940w,<% } %>
              <% if(section.settings.image.width >= 1070){ %><%= section.settings.image | img_url: '1070x' %> 1070w<% } %>"
              src="<%= section.settings.image | img_url: '533x' %>"
              sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
              alt="<%= section.settings.image.alt %>"
              loading="lazy"
              width="<%= section.settings.image.width %>"
              height="<%= section.settings.image.height %>" 
            />
          <% } else { %>
            <%=image' | placeholder_svg_tag: 'placeholder-svg' %>
          <% } %>
        </div>
      </div>
      <div class="grid__item">
        <div class="image-with-text__content " style="text-align:<%=section.settings.align%>">
          <% section?.block_order?.forEach((orderItem, index) => {){ %><% let block = section?.blocks[orderItem]){ %>
            <% if(block.type){ %>
              <% } else if(block.type === 'heading'){ %>
                <h2 class="image-with-text__heading h1 py-<%=block?.settings?.fs%> py-mg-y-s" style="color:<%=section.settings.py_section_color%>">
                  <%= block?.settings?.heading %>
                </h2>
              <% } else if(block.type === 'text'){ %>
                <div class="image-with-text__text rte py-<%=block?.settings?.fs%>"  style="color:<%=section.settings.py_section_color%>"><%= block?.settings?.text %></div>
              <% } else if(block.type === 'button'){ %>
                <% if(block?.settings?.button_label){ %>
                  <a href="<%= block?.settings?.button_link %>" class="button py-btn-no-br py-c-<%=block?.settings?.py_section_color_view_btn%> py-hv-c-<%=block?.settings?.py_section_color_view_btn_hover%> py-bg-c-<%=block?.settings?.py_section_bg_color_view_btn%> py-hv-bg-c-<%=block?.settings?.py_section_bg_color_view_btn_hover%> py-btn-<%=block?.settings?.view_btn_size%>"<% if(block?.settings?.button_link === blank){ %> aria-disabled="true"<% } %>><%= block?.settings?.button_label %></a>
                <% } %>
            <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>


<% options?.forEach((option,index)=>{ %>
<% var optionName = option.name.toLowerCase() %>
<% var option_index = index %> 
<% if(optionName.includes('olor') || optionName.includes('olour')){ %>
    <div class="bc-card-color">
        <div class="bc-card-color__list" option_index="<%=option_index%>">
            <% if(limit && limit !== ''){ %>
              <% option.values.forEach((value,index)=>{ %>
                <% if(index <= limit){ %>
                    <div class="bc-card-color__item <% if(index === 0){ %>selected<% } %>" data-index="<%= index %>" data-option="<%= value %>">
                        <span class="pd-colors__icon" data-color="<%= value.toLowerCase() %>"></span>
                    </div>
                <% } %>
              <% }) %>
              <% if(option.values.length > limit){ %>
               <div class="extra-colors"> + <%=option.values.length - 4%></div>
              <% } %>
            <% } else { %>
              <% option?.values?.forEach((value,index)=>{ %>
              <div class="bc-card-color__item <% if(index === 0){ %>selected<% } %>" data-index="<%= index %>" data-option="<%= value %>">
                  <span class="pd-colors__icon" data-color="<%= value.toLowerCase() %>"></span>
              </div>
              <% }) %>
            <% } %>
        </div>
    </div>
<% } %>
<% }) %>
<link rel="stylesheet" href="/assets/section-image-banner.css">

<div id="Banner-<%=section.name%>" class="banner hero_banner bc-<%=settings.section_style%>-bt" <% if(section.settings.url){ %>data-href="<%= section.settings.url %>" style="cursor: pointer;"<% } %>>
  <% if(section.settings.image){ %>
    <div class="media<% if(!section.settings.image){ %> placeholder<% } %><% if(section.settings.image_2){ %> small-hide<% } %>" style="padding-bottom: 37.94096472282217%;">
      <img srcset="//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_375x.jpg?v=1642700621 375w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_750x.jpg?v=1642700621 750w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_1100x.jpg?v=1642700621 1100w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_1500x.jpg?v=1642700621 1500w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_1780x.jpg?v=1642700621 1780w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_2000x.jpg?v=1642700621 2000w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_2800x.jpg?v=1642700621 2800w" sizes="50vw" src="//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_750x.jpg?v=1642700621" loading="lazy" alt="" width="4167" height="1581.0" class="banner__media-image-half">
    </div>
  <% } else if(!section.settings.image_2){ %>
    <div class="media<% if(!section.settings.image){ %> placeholder<% } %><% if(section.settings.image_2){ %> small-hide<% } %>" style="padding-bottom: 37.94096472282217%;">
      <img srcset="//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_375x.jpg?v=1642700621 375w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_750x.jpg?v=1642700621 750w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_1100x.jpg?v=1642700621 1100w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_1500x.jpg?v=1642700621 1500w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_1780x.jpg?v=1642700621 1780w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_2000x.jpg?v=1642700621 2000w,//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_2800x.jpg?v=1642700621 2800w" sizes="50vw" src="//cdn.shopify.com/s/files/1/2112/6981/files/NEW_Desktop6-2_750x.jpg?v=1642700621" loading="lazy" alt="" width="4167" height="1581.0" class="banner__media-image-half">
    </div>
  <% } %>
  <% if(section.settings.image_2){ %>
    <%- include('resimg', {image: section.settings.image_2, classwrapper: 'large-up-hide medium-hide'}) %>
  <% } %>
  <div class="banner__content banner__content-<%= section.id %> page-width">
    <%# include('../snippets/icon-arrow', {sufix: '.banner__content', id: section.name, style: section.settings}) %>
    <div class="banner__box">
      <% section.blocks.forEach(block => { %>
        <% if(block.type === 'heading'){ %>
          <h2 class="banner__heading h1 color-white" id="banner__heading-<%= block.id %>">
            <%= block.settings?.heading %>
          </h2>
          <%# include('../snippets/style', {sufix: '#banner__heading', id: block.name, style: block.settings}) %>
        <% } else if(block.type === 'text'){ %>
          <div class="banner__text color-white" id="banner__text-<%= block.name %>">
            <%- block.settings?.text -%>
          </div>
          <%# include('../snippets/style', {sufix: '#banner__text', id: block.id, style: block.settings}) %>
        <% } else if(block.type === 'buttons'){ %>
          <div class="banner__buttons<% if(block.settings?.button_label_1 && block.settings?.button_link_1 && block.settings?.button_label_2 && block.settings?.button_link_2){ %> banner__buttons--multiple<% } %>">
            <% if(block.settings?.button_label_1){ %>
              <a id="bunner__button-<%= block.name %>" href="<%= block.settings?.button_link_1 %>" class="button button--primary"<% if(!block.settings?.button_link_1){ %> aria-disabled="true"<% } %>>
                <%= block.settings?.button_label_1 %>
              </a>
              <%# include('../snippets/style', {sufix: '#bunner__button', id: block.id, style: block.settings}) %>
            <% } %>
          </div>
        <% } %>
      <% }) %>
    </div>
  </div>
</div>



<script>
  if(document.getElementsByClassName('hero_banner').length>0){
    var HSL = document.getElementsByClassName("hero_banner");
    var i;

    for (i = 0; i < HSL.length; i++) {
      if(HSL[i].getAttribute('data-href')!=null)
      HSL[i].addEventListener("click", function() {
        window.location.href = this.getAttribute('data-href');
      });
    }
  }
</script>

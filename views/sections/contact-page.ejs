<link rel="stylesheet" href="/assets/section-main-page.css" media="print" onload="this.media='all'">
<link rel="stylesheet" href="/assets/component-rte.css" media="print" onload="this.media='all'">
<link rel="stylesheet" href="/assets/section-contact-form.css">
<style>
  @media(min-width:750px){
    .py-horizontal{
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
    }
    .py-horizontal>.page-content-container{
      width:calc(98% - 320px);
    }
    .py-horizontal>.contact-form-container{
      width:320px;
    }
  }
  .page-container{
    background-color:<%=section.settings.page_bg_color%>
  }
  .contact-form-container .field__input{
    background-color:<%=section.settings.field_bg_color%>;
    border:<%=section.settings.field_border_width%>px solid <%=section.settings.field_border_color%>;
    border-radius:<%=section.settings.field_border_radius%>px;
    color:<%=section.settings.field_color%>;
    font-size:<%=section.settings.field_font_size%>px;
  }
  .contact-form-container .field__input:focus{
    color:<%=section.settings.field_focus_color%>;
    border-color:<%=section.settings.field_focus_color%>;
  }
</style>
<div class="page-container">
<div class=" page-width py-<%=section.settings.layout%> py-<%=section.settings.page_width%> py-pd-y-xl">
  <div class="page-content-container">
  <% section.blocks.forEach((block,index)=>{ %>
    <% if(block.type === 'title'){ %>
          <style>
            .main-page-title{
              font-size:<%=block?.settings?.title_font_size%>px;
              color:<%=block?.settings?.title_color%>;
              text-align:<%=block?.settings?.title_align%>;
            }            
          </style>
          <h1 class="main-page-title page-title h0">
            <%= page.title %>
          </h1>
    <% } else if(block.type === 'content'){ %>
           <style>              
              .page-content{
                font-size:<%=block?.settings?.content_font_size%>px;
                color:<%=block?.settings?.content_color%>;
                text-align:<%=block?.settings?.content_align%>;
              }
          </style>
          <div class="rte page-content">
            <%= page.content %>
          </div>
    <% } %>
  <% }) %>
  </div>
  <div class="contact-form-container py-pd-y-xl"> 
    <form id="ContactForm">
      <% if(form.posted_successfully){ %>
        <div class="form-status form-status-list form__message" tabindex="-1" autofocus><%- include('../snippets/icon-success') %> Post Success</div>
      <% } else if(form.errors){ %>
        <div class="form__message">
          <h2 class="form-status caption-large" role="alert" tabindex="-1" autofocus><%- include('../snippets/icon-error') %> Error Heading</h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              <%= form.errors.translated_fields['email'] %> <%= form.errors.messages['email'] %>
            </a>
          </li>
        </ul>
      <% } %>
      <div class="contact__fields">
        <div class="field">
          <label class="field__label" for="ContactForm-name">name</label>
          <input class="field__input" autocomplete="name" type="text" id="ContactForm-name" name="contact[name]" value="<% if(form.name){ %><%= form.name %><% } else if(customer){ %><%= customer.name %><% } %>" placeholder="name">
        </div>
        
        <div class="field field--with-error">
          <label class="field__label" for="ContactForm-email">email<span aria-hidden="true">*</span></label>
          <input
            autocomplete="email"
            type="email"
            id="ContactForm-email"
            class="field__input"
            name="contact[email]"
            spellcheck="false"
            autocapitalize="off"
            value="<% if(form.email){ %><%= form.email %><% } else if(customer){ %><%= customer.email %><% } %>"
            aria-required="true"
            <% if(form.errors === 'email'){ %>
              aria-invalid="true"
              aria-describedby="ContactForm-email-error"
            <% } %>
            placeholder="email"
          >         
          <% if(form.errors === 'email'){ %>
            <small class="contact__field-error" id="ContactForm-email-error">
              <span class="visually-hidden">error</span>
              <span class="form__message"><%- include('../snippets/icon-error') %><%= form.errors.translated_fields['email'] %> <%= form.errors.messages['email'] %></span>
            </small>
          <% } %>
        </div>
        <div class="field">
          <label class="field__label" for="ContactForm-phone">phone</label>
          <input type="tel" id="ContactForm-phone" class="field__input" autocomplete="tel" name="contact[phone]" pattern="[0-9\-]*" value="<% if(form.phone){ %><%= form.phone %><% } else if(customer){ %><%= customer.phone %><% } %>" placeholder="phone">
        </div>      
      <% section.blocks.forEach((block,index)=>{ %>
        <% if(block.type === 'addition_field'){ %>
              <div class="field addition_field">
                <label class="field__label" for="ContactForm-<%=block?.settings?.field_label?.replace(' ', '-') %>"><%=block?.settings?.field_label%></label>
                <input type="text" id="ContactForm-<%=block?.settings?.field_label?.replace(' ', '-') %>" class="field__input" autocomplete="<%=block?.settings?.field_label%>" name="contact[<%=block?.settings?.field_label?.replace(' ', '-') %>]" value="" placeholder="<%=block?.settings?.field_label%>">
              </div>
        <% } %>
      <% }) %>
      </div>  
      <div class="field message-area">
        <label class="form__label field__label" for="ContactForm-body">comment</label>
        <textarea
          rows="10"
          id="ContactForm-body"
          class="text-area field__input"
          name="contact[comment]"
          placeholder="comment"
        >
          <%- form.body -%>
        </textarea>
        
      </div>
      <div class="contact__button">
        <button type="submit" class="button">
          send
        </button>
      </div>
    </form>
  </div>

</div>
</div>
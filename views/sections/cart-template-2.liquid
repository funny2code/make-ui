<style>
  {% if section.settings.button_radius %}
  .bc-cart__buttons-wrapper .button{
    border-radius: {{section.settings.button_radius}}px;  
  }
  {% endif %}
  {% if section.settings.item_bg %}
  .bc-cart__item{
    padding:10px;
    background-color:{{section.settings.item_bg}};
    {% if section.settings.item_radius %}
    border-radius: {{section.settings.item_radius}}px; 
    {% endif %}
  }
  {% endif %}
  {% if section.settings.item_radius %}
  .bc-cart__item .bc-cart__image-wrapper img{
    border-radius: {{section.settings.item_radius}}px;
  } 
  {% endif %}
  {% if section.settings.enable_dynamic_pay %}
  #loopcheckoutdynamic{
    margin-top: 15px;
    background: #5b32f6;
  }
  #loopcheckoutdynamic:hover{
    box-shadow: 0 0 10px black;
  }
  #loopcheckoutdynamic img{
    width: 74px;
  }
  {% endif %}
</style>
{%- render 'cart-notification-2',
    cart_layout: section.settings.cart_layout,
    enable_dynamic_pay: section.settings.enable_dynamic_pay,
-%}
{% schema %}{
  "name": "Cart Template 2",
  "settings": [
    {
      "type": "select",
      "id": "cart_layout",
      "label": "Cart Modal Layout",
      "options": [
        {
          "label": "One Column",
          "value": "one-c"
        },
        {
          "label": "Two Column",
          "value": "two-c"
        }
      ],
      "default": "two-c"
    },
    {
      "type": "checkbox",
      "id": "enable_dynamic_pay",
      "default": false,
      "label": "Add Dynamic Payment Button"
    },
    {
      "type": "text",
      "id": "button_radius",
      "default": "50",
      "label": "Checkout Button Radius"
    },
    {
      "type": "color",
      "id": "item_bg",
      "default": "#000000",
      "label": "Item Background"
    },
    {
      "type": "text",
      "id": "item_radius",
      "default": "10",
      "label": "Item Border Radius"
    }
  ]
}{% endschema %}
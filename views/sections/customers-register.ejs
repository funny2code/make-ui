<link rel="stylesheet" href="/assets/section-main-page.css" media="print" onload="this.media='all'">
<link rel="stylesheet" href="/assets/component-rte.css" media="print" onload="this.media='all'">

<link rel="stylesheet" href="/assets/customer.css">

<style>  
  .page-container{
    background-color:<%=section.settings.page_bg_color%>;
    padding:5px;    
  }
  .page-container .customer *{
    color:<%=section.settings.page_color%>;
  }
  .page-container .customer .field input {
    border:<%=section.settings.field_border_width%>px solid <%=section.settings.field_br_color%>;
    border-radius:<%=section.settings.field_border_radius%>px;
    background-color:<%=section.settings.field_bg_color%>;
    color:<%=section.settings.field_color%>;
    padding: 12px 15px;
    width:100%;
  }
  .page-container .customer .register_btn{
    border:<%=section.settings.register_btn_border_width%>px solid <%=section.settings.register_btn_br_color%>;
    border-radius:<%=section.settings.register_btn_border_radius%>px;
    background-color:<%=section.settings.register_btn_bg_color%>;
    color:<%=section.settings.register_btn_color%>;
    width:100%;
  }
  .page-container .customer .register_btn:hover{
    background-color:<%=section.settings.register_btn_hover_bg_color%>;
    color:<%=section.settings.register_btn_hover_color%>;
    border-color:<%=section.settings.register_btn_hover_br_color%>;
  }
</style>

<div class="page-container">
  <div class="customer register">
    <svg style="display: none">
      <symbol id="icon-error" viewBox="0 0 13 13">
        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
        <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
      </symbol>
    </svg>
    <h1>
      Title
    </h1>
    <form novalidate="novalidate">
      <% if(form?.errors){ %>
        <h2 class="form__message" tabindex="-1" autofocus>
          <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg>
          Error Heading
        </h2>
        <ul> 
          <% form?.errors?.forEach((field,index)=>{ %>
            <li>
              <% if(field === 'form'){ %>
                <%= form?.errors?.messages[field] %>
              <% } else { %>
                <a href="#RegisterForm-<%= field %>">
                  <%= form?.errors?.translated_fields[field] %>
                  <%= form?.errors?.messages[field] %>
                </a>
              <% } %>
            </li>
          <% }) %>
        </ul>
      <% } %>
      <div class="field">      
        <label for="RegisterForm-FirstName">
          First Name
        </label>
        <input
          type="text"
          name="customer[first_name]"
          id="RegisterForm-FirstName"
          <% if(form?.first_name){ %>value="<%= form?.first_name %>"<% } %>
          autocomplete="given-name"
          placeholder="First Name"
        >
        
      </div>
      <div class="field">
        <label for="RegisterForm-LastName">
          Last Name
        </label>
        <input
          type="text"
          name="customer[last_name]"
          id="RegisterForm-LastName"
          <% if(form?.last_name){ %>value="<%= form?.last_name %>"<% } %>
          autocomplete="family-name"
          placeholder="Last Name"
        >
        
      </div>
      <div class="field">      
        <label for="RegisterForm-email">
          Email
        </label>
        <input
          type="email"
          name="customer[email]"
          id="RegisterForm-email"
          <% if(form?.email){ %> value="<%= form?.email %>"<% } %>
          spellcheck="false"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
          <% if(form?.errors === 'email'){ %>
            aria-invalid="true"
            aria-describedby="RegisterForm-email-error"
          <% } %>
          placeholder="Email"
        >
        
      </div>
      <% if(form?.errors === 'email'){ %>
        <span id="RegisterForm-email-error" class="form__message">
          <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg>
          <%= form?.errors?.translated_fields['email'] %> <%= form?.errors?.messages['email'] %>.
        </span>
      <% } %>
      <div class="field">     
        <label for="RegisterForm-password">
          Password
        </label>
        <input
          type="password"
          name="customer[password]"
          id="RegisterForm-password"
          aria-required="true"
          <% if(form?.errors === 'password'){ %>
            aria-invalid="true"
            aria-describedby="RegisterForm-password-error"
          <% } %>
          placeholder="Password"
        >
        
      </div>
      <% if(form?.errors === 'password'){ %>
        <span id="RegisterForm-password-error" class="form__message">
          <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg>
          <%= form?.errors?.translated_fields['password'] %> <%= form?.errors?.messages['password'] %>.
        </span>
      <% } %>
      <button class="register_btn">
        submit
      </button>
    </form>
  </div>
</div>
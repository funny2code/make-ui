<link rel="stylesheet" href="/assets/component-cart.css">
<link rel="stylesheet" href="/assets/component-cart-items.css">
<link rel="stylesheet" href="/assets/component-totals.css">
<link rel="stylesheet" href="/assets/component-price-style-1.css">
<link rel="stylesheet" href="/assets/component-discounts.css">
<link rel="stylesheet" href="/assets/component-loading-overlay.css">

<style>  
  <% if(section.settings.item_bg){ %>
  .cart-item{
    padding:20px;
    background-color:<%=section.settings.item_bg%>;
    <% if(section.settings.item_radius){ %>
    border-radius: <%=section.settings.item_radius%>px; 
    <% } %>
  }
  <% } %>  
  <% if(section.settings.item_radius){ %>
  .cart-item .cart-item__media img{
    border-radius: <%=section.settings.item_radius%>px;
  } 
  <% } %>
</style>
<cart-items class="page-width<% if(!cart){ %> is-empty<% } %>">
  <div class="title-wrapper-with-link">
    <h3 class="title title--primary">caption</h3>
    <a href="#" class="underlined-link hidden">Continue Shopping</a>
  </div>

  <div class="cart__warnings">
    <h2 class="cart__empty-text">Empty</h2>
    <a href="#" class="link">
      Continue Shopping
    </a>
  </div>

  <form class="cart__contents critical-hidden" method="post" id="cart">
    <div class="cart__items" id="main-cart-items" data-id="<%= section.id %>">
      <div class="js-contents">
        <% if(cart){ %>
          <table class="cart-items">
            <thead class="hidden">
              <tr>
                <th class="caption-with-letter-spacing" colspan="2" scope="col">Product</th>
                <th class="cart-items__heading--wide medium-up caption-with-letter-spacing" colspan="1" scope="col">Quantity</th>
                <th class="medium-up right caption-with-letter-spacing" colspan="1" scope="col">Total</th>
              </tr>
            </thead>

            <tbody>
              <% cart.items.forEach((item,index)=>{ %>
                <tr class="cart-item" id="CartItem-<%= item?.index + 1 %>">
                  <td class="cart-item__media">
                    <% if(item?.image){ %>
                      <img class="cart-item__image"
                        src="<%= item?.image %>"
                        alt="<%= item?.image.alt %>"
                        loading="lazy"
                        width="75"
                        height="<%= 75 / item?.image.aspect_ratio %>"
                      >
                    <% } %>
                  </td>

                  <td class="cart-item__details">
                    <% if(section.settings.show_vendor){ %>
                      <p class="caption-with-letter-spacing light"><%= item?.product?.vendor %></p>
                    <% } %>

                    <a href="#" class="cart-item__name break"><%= item?.product?.title %></a>

                    <% if(item?.product?.has_only_default_variant === false || item?.properties?.length !== 0 || item?.selling_plan_allocation){ %>
                      <dl>
                        <% if(!item?.product?.has_only_default_variant){ %>
                          <% item?.options_with_values?.forEach((option,index)=>{ %>
                            <div class="product-option">
                              <dt><%= option.name %>: </dt>
                              <dd><%= option.value %></dd>
                            </div>
                          <% }) %>
                        <% } %>
                        
                        <% item?.properties?.length && item?.properties?.forEach((property,index)=>{ %>
                          <% var property_first_char = property?.first?.slice(0,1) %>
                          <% if(property.last && property_first_char !== '_'){ %>
                            <div class="product-option">
                              <dt><%= property.first %>: </dt>
                              <dd>
                                <% if(property.last === '/uploads/'){ %>
                                  <a href="#" target="_blank">
                                    <%= property.last.split('/').pop() %>
                                  </a>
                                <% } else { %>
                                  <%= property.last %>
                                <% } %>
                              </dd>
                            </div>
                          <% } %>
                        <% }) %>
                      </dl>

                      <p class="product-option"><%= item?.selling_plan_allocation?.selling_plan?.name %></p>
                    <% } %>

                    <ul class="discounts list-unstyled" role="list" aria-label="discount">
                      <% item?.discounts?.forEach((discount,index)=>{ %>
                        <li class="discounts__discount">
                          <%- include('../snippets/icon-discount') %>
                          <%= discount.title %>
                        </li>
                      <% }) %>
                    </ul>
                    
                    <div class="cart-item__price-wrapper">
                      <% if(item?.original_price !== item?.final_price){ %>
                        <dl class="cart-item__discounted-prices">
                          <dt class="visually-hidden">
                            Regular Price
                          </dt>
                          <dd>
                            <s class="cart-item__old-price price price--end">
                              <%= item?.original_price %>
                            </s>
                          </dd>
                          <dt class="visually-hidden">
                            Sale Price
                          </dt>
                          <dd class="price price--end">
                            <%= item?.final_price %>
                          </dd>
                        </dl>

                        <% if(item?.variant?.available && item?.unit_price_measurement){ %>
                          <div class="unit-price caption">
                            <span class="visually-hidden">unit price</span>
                            <%= item?.variant?.unit_price %>
                            <span aria-hidden="true">/</span>
                            <span class="visually-hidden">&nbsp;unit price separator&nbsp;</span>
                            <% if(item?.variant?.unit_price_measurement.reference_value !== 1){ %>
                              <%- item?.variant?.unit_price_measurement.reference_value -%>
                            <% } %>
                            <%= item?.variant?.unit_price_measurement.reference_unit %>
                          </div>
                        <% } %>
                      <% } else { %>
                        <span class="price">
                          <%= item?.original_price %>
                        </span>
                      <% } %>
                    </div>

                    <p class="cart-item__error" id="Line-item-error-<%= item?.index + 1 %>">
                      <span class="cart-item__error-text"></span>
                      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
                        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                        <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                      </svg>
                    </p>
                  </td> 
                  <td class="cart-item__totals right">
                    <div class="loading-overlay hidden">
                      <div class="loading-overlay__spinner">
                        <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                      </div>
                    </div>

                    <div class="cart-item__price-wrapper">
                      <% if(item?.original_line_price !== item?.final_line_price){ %>
                        <dl class="cart-item__discounted-prices">
                          <dt class="visually-hidden">
                            Sale Price
                          </dt>
                          <dd class="price price--end">
                            <%= item?.final_line_price %>
                          </dd>
                        </dl>
                      <% } else { %>
                        <span class="price price--end">
                          <%= item?.original_line_price %>
                        </span>
                      <% } %>
                    </div>
                    
                    <div class="cart-item__quantity">
                      <label class="hidden" for="Quantity-<%= item?.index + 1 %>">
                        Quantity
                      </label>
                      <quantity-input class="quantity">
                        <button class="quantity__button no-js-hidden" name="minus" type="button">
                          <span class="visually-hidden">decrease</span>
                          <%- include('../snippets/icon-minus') %>
                        </button>
                        <input class="quantity__input"
                          type="number"
                          name="updates[]"
                          value="<%= item?.quantity %>"
                          min="0"
                          aria-label="input_label"
                          id="Quantity-<%= item?.index + 1 %>"
                          data-index="<%= item?.index + 1 %>"
                        >
                        <button class="quantity__button no-js-hidden" name="plus" type="button">
                          <span class="visually-hidden">increase</span>
                          <%- include('../snippets/icon-plus') %>
                        </button>
                      </quantity-input>
                    </div>

                    <cart-remove-button id="Remove-<%= item?.index + 1 %>" data-index="<%= item?.index + 1 %>">
                      <a href="#" class="" aria-label="remove">
                        <%- include('../snippets/icon-remove') %>
                      </a>
                    </cart-remove-button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>

    <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
    <p class="visually-hidden" id="shopping-cart-line-item-status" aria-live="polite" aria-hidden="true" role="status">loading</p>
  </form>
</cart-items>

<script src="/assets/cart.js" defer="defer"></script>
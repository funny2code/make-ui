<div class="<% if(section.settings.include_margins){ %>page-width<% } %>">
  <% section.blocks?.forEach((block,index)=>{ %>
    <% render block){ %>
  <% }) %>
</div>

<% schema){ %>
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": false,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
<% endschema){ %>

<link rel="stylesheet" href="<%=component-rte.css' <%=srcId%> %>" >
<link rel="stylesheet" href="<%=section-main-page.css' <%=srcId%> %>" >

<noscript><%=component-rte.css' <%=srcId%> | stylesheet_tag %></noscript>
<noscript><%=section-main-page.css' <%=srcId%> | stylesheet_tag %></noscript>

<div class="page-width">
  <h2 class="page-title">
    <% if(section.settings.page.title){ %>
      <%= section.settings.page.title %>
    <% } else { %>
      Page title
    <% } %>
  </h2>
  <div class="rte">
    <% if(section.settings.page.content){ %>
      <%= section.settings.page.content %>
    <% } else { %>
      <div class='page-placeholder-wrapper placeholder'>
        <%=page' | placeholder_svg_tag: 'page-placeholder' %>
      </div>
    <% } %>
  </div>
</div>

<% schema){ %>
{
  "name": "t:sections.page.name",
  "tag": "section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.page.settings.page.label"
    }
  ]
}
<% endschema){ %>

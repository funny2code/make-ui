<div class="card-wrapper">
  <a href="<%= product_card_product.url %>" class="full-unstyled-link">
    <span class="visually-hidden"><%= product_card_product.title %></span>
  </a>  
  <div class="card card--product<% if(!product_card_product?.images.length){ %> card--text-only card--soft<% } %>" tabindex="-1">
    <div class="card__inner">
      <% if(product_card_product.images.length){ %>
        <% 
          var featured_media_aspect_ratio = product_card_product.images[0].aspect_ratio
          if(!product_card_product.images[0].aspect_ratio){
            featured_media_aspect_ratio = 1
          }
        %>
        <a href="<%= product_card_product.url %>" class="full-unstyled-link">
          <div>
            <div class="media media--transparent media--<%= media_size %> media--hover-effect"
                <% if(media_size === 'adapt' && product_card_product.images.length){ %> style="padding-bottom: <%= 1 / featured_media_aspect_ratio * 100 %>%;"<% } %>
                >
              <img srcset="<% if(product_card_product.images[0].width >= 165){ %><%= product_card_product.images[0].src %> 165w,<% } %>
                          <% if(product_card_product.images[0].width >= 360){ %><%= product_card_product.images[0].src %> 360w,<% } %>
                          <% if(product_card_product.images[0].width >= 533){ %><%= product_card_product.images[0].src %> 533w,<% } %>
                          <% if(product_card_product.images[0].width >= 720){ %><%= product_card_product.images[0].src %> 720w,<% } %>
                          <% if(product_card_product.images[0].width >= 940){ %><%= product_card_product.images[0].src %> 940w,<% } %>
                          <% if(product_card_product.images[0].width >= 1066){ %><%= product_card_product.images[0].src %> 1066w<% } %>"
                  src="<%= product_card_product.images[0].src %>"
                  sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                  alt="<%= product_card_product.images[0].alt %>"
                  loading="lazy"
                  class="motion-reduce"
                  width="<%= product_card_product.images[0].width %>"
                  height="<%= product_card_product.images[0].height %>"
                  >

              <% if(product_card_product.images[1] && show_secondary_image){ %>
              <img srcset="<% if(product_card_product.images[1].width >= 165){ %><%= product_card_product.images[1].src %> 165w,<% } %>
                          <% if(product_card_product.images[1].width >= 360){ %><%= product_card_product.images[1].src %> 360w,<% } %>
                          <% if(product_card_product.images[1].width >= 533){ %><%= product_card_product.images[1].src %> 533w,<% } %>
                          <% if(product_card_product.images[1].width >= 720){ %><%= product_card_product.images[1].src %> 720w,<% } %>
                          <% if(product_card_product.images[1].width >= 940){ %><%= product_card_product.images[1].src %> 940w,<% } %>
                          <% if(product_card_product.images[1].width >= 1066){ %><%= product_card_product.images[1].src %> 1066w<% } %>"
                  src="<%= product_card_product.images[1].src %>"
                  sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                  alt="<%= product_card_product.images[1].alt %>"
                  loading="lazy"
                  class="motion-reduce"
                  width="<%= product_card_product.images[1].width %>"
                  height="<%= product_card_product.images[1].height %>"
                  >
              <% } %>
            </div>
          </div>
        </a>
      <% } else { %>
        <div class="card__content"><h2 class="card__text h2"><%= product_card_product.title %></h2></div>
      <% } %>

      <div class="card__badge">
        <% if(!product_card_product.available){ %>
        <span class="badge badge--bottom-left color-<%= settings.sold_out_badge_color_scheme %>" aria-hidden="true">
          Sold out
        </span>
        <% } else if(product_card_product.compare_at_price > product_card_product.price && product_card_product.available){ %>
        <span class="badge badge--bottom-left color-<%= settings.sale_badge_color_scheme %>" aria-hidden="true">
          On sale
        </span>
        <% } %>
      </div>
      <%# include('./component-badge', {meta: product_card_product.metafields.selling, vertical: true}) %>
      <% if(product_card_product.variants.length > 0){ %>
      <% if(product_card_product?.metafields?.status?.date && product_card_product?.metafields?.status?.comming_soon){ %>
      <%# include('./comming-soon', {date: product_card_product?.metafields?.status?.date}) %>                 
      <% } %>
      <% } %>
      <div class="quick-view-badge">
        <a href="#open-quick-view-modal" data-id="<%=product_card_product.id%>" variant_id="<%=product_card_product.variants[0].id%>">Quick View</a>
        <div class="hidden product_object"><%= JSON.stringify(product_card_product) %></div>
        <div class="hidden product_option_object"><%= JSON.stringify(product_card_product?.options) %></div>
        <div class="hidden product_variant_object"><%= JSON.stringify(product_card_product?.variants) %></div>
        <div class="hidden product_variants-meta">[
                    <% product_card_product.variants.forEach((variant, index) => { %>
                          {
                          	"<%=variant.id%>" : 
                            <% if(variant?.metafields?.order?.length > 0){ %>
                              <% variant?.metafields?.order.forEach((item, key) => { %>
                                  <% if(key === 0){ %>
                                      {
                                  <% } %>
                                          "<%=item[0]%>" : "<%= item[1] %>"<% if(key !== variant?.metafields?.order){ %>,<% } %>
                                  <% if(key === variant?.metafields?.order.length){ %>
                                      }
                                  <% } %>
                              <% }) %>
                            <% } else { %>
                            	""
                            <% } %>
                          }<% if(index !== product_card_product.variants.length){ %>,<% } %>
                    <% }) %>
                  ]</div>
      </div>
    </div>
  </div>
 
  <a href="<%= product_card_product.url %>" class="full-unstyled-link">
    <div class="card-information
          <% if(product_card_product?.variants.length > 1){ %> 
            <% product_card_product?.options.forEach((option, index) => { %>
                <% var option_name = option.name.toLowerCase() %>                 
                <% if(option_name === 'color' || option_name === "colour"){ %>
                <%= 'variant-color-product' %>
                <% } %>                   
            <% }) %>
          <% } %>" >
      <div class="card-information__wrapper">
        <div class="product-review-color">
          <div class="review">Review widget </div>
          <% if(product_card_product?.variants.length > 1){ %> 
             <% product_card_product.options.forEach((option, index) => { %>
                 <% var option_name = option.name.toLowerCase() %>                 
                 <% if(option_name === 'color' || option_name === "colour"){ %>
                 <% var product_color = option %>
                   <div class="color-option">
                     <span class='dot'> &#160;&#160;&sdot;&#160;&#160;</span><%=product_color?.values?.length%> Colors
                   </div>
                 <% } %>                    
              <% }) %>
          <% } %>
         
        </div>
        <% if(product_card_product?.images?.length){ %>
          <span class="card-information__text h5">
            <%= product_card_product.title %>
          </span>
        <% } %>
        <% if(show_vendor){ %>
          <span class="visually-hidden">vendor</span>
          <div class="caption-with-letter-spacing light"><%= product_card_product?.vendor %></div>
        <% } %>
       

        
        <%- include('./component-card-color', {options: product_card_product?.options, limit: 4}) %>        
        <%# include('./price', {product: product_card_product, price_class: ''}) %>

      </div>
    </div>
  </a> 
</div>

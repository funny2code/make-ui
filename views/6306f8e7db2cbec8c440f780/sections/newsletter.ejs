<link rel="stylesheet" href="/<%=srcId%>/component-newsletter-style-1.css">
<link rel="stylesheet" href="/<%=srcId%>/newsletter-section.css">

<div class="newsletter center<% if(!section.settings.full_width){ %> newsletter--narrow page-width<% } %> bc-<%=settings.section_style%>-bt">
  <div class="newsletter__wrapper color-<%= section.settings.color_scheme %>">
    <% section.blocks.forEach((block, index) => { %>
      <% if(block.type === 'heading'){ %>
        <h2 class="h1"><%= block.settings?.heading ? block.settings?.heading : "Subscribe to our emails" %></h2>
      <% } else if(block.type === 'paragraph'){ %>
        <div class="newsletter__subheading rte"><%- block.settings?.paragraph ? block.settings?.paragraph : "<p>Be the first to know about new collections and exclusive offers.</p>" -%></div>
      <% } else if(block.type === 'email_form'){ %>
        <form id="customer" class="newsletter-form">
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--1"
                type="email"
                name="contact[email]"
                class="field__input"
                value=""
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="Your Email"
                required
              >
              <label class="field__label" for="NewsletterForm--1">
                Your Email
              </label>
            </div>
          </div>
          <button type="submit" class="newsletter__button button" name="commit">
            Newsletter
          </button>
        </form>
      <% } %>
    <% }) %>
  </div>
</div>